// topページ

.box {
  position: relative;
  height: 100vh;
  left: 0px;
  top: 0px;
  z-index: 0;
  margin: 100px 0px 0px 0px;
}

.home_top{
  color: white;
  margin: 0px 0px 0px 100px;
}

.top-text{
  color: white;
  margin: 0px 0px 0px 100px;
}

.box .bgImg {
  display: flex;
  justify-content: flex-end;
  position: absolute;
  width: 100%;
  height: 600px;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
  opacity: 0;
  background-size: 100% auto;
  animation: bgAnime 10s infinite;   /* 4画像 × 各5s = 20s */
  object-fit: cover;
}

/* --- 段差で背景画像のアニメーションを実行 ----------------- */
.box .src1 {
  background-image: image-url(<%= asset_path('CB5CF3D5-F1E4-4092-8B79-B2C294AE8CF3_1_105_c.jpeg') %>);/* 背景の画像を指定 */
  border-radius: 50px;
}
.box .src2 {
  background-image: image-url(<%= asset_path('38AD4B95-731E-48F9-A53A-1298B14D07FD_1_105_c.jpeg') %>);   /* 背景の画像を指定 */
  border-radius: 50px;
  animation-delay: 5s;
}

@keyframes bgAnime {
   0% { opacity: 0; }
  50% { opacity: 1; }
 100% { opacity: 0; }
}


