<div class="container">
<h2 class="head-line title_h2 text-center">管理側会員一覧</h2>
<div class="row">
  <div class="col-xs-10 col-xs-offset-1">
    <table class="table-hover table-bordered table-condensed">
      <thead>
        <tr>
          <th>会員ID</th>
          <th>氏名</th>
          <th>カナ</th>
          <th>メールアドレス</th>
          <th>郵便番号</th>
          <tH>住所</tH>
          <th>電話番号</th>
          <th>ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% @customers.each do |customer| %>
          <tr>
            <td class="info col-xs-1" >
              <%= customer.id %>
            </td>
            <td>
              <p><%= customer.last_name %> <%= customer.first_name %></p>
            </td>
            <td>
              <p><%= customer.last_name_kana %> <%= customer.first_name_kana %></p>
            </td>
            <td><%= customer.email %></td>
            <td><%= customer.postal_code %></td>
            <td><%= customer.address %></td>
            <td><%= customer.telephone_number %></td>
            <td class="col-xs-2">
              <% if customer.is_valid == true%>
                <p>有効</p>
              <% else %>
                <p>退会済</p>
              <% end %>
            </td>
          </tr>
         <% end %>
      </tbody>
    </table>
  </div>
    <div class= "text-center" ><%= paginate(@customers) %></div>
</div>
</div>