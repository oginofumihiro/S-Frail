<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <div class= "font">ジャンル一覧、ジャンル追加</div>
        <%= form_with model:@genre,local:true, url: admin_genres_path do |f| %>
        <% if @genre.errors.any? %>
          <div id="error_explanation">
            <h3>保存されませんでした</h3>
            <ul>
              <% @genre.errors.full_messages.each do |message| %>
                <li>空白で登録は出来ません</li>
              <% end %>
            </ul>
          </div>
        <% end %>
        <div class='genre_new'>
          <%= f.label :ジャンル名 %>
          <%= f.text_field :name %>
          <%= f.submit '新規登録', class: 'genre_button' %>
        </div>
        <% end %>
        <table>
          <% @genres.each do |genre| %>
            <tr>
              <td><%= genre.name %></td>
              <td><%= link_to '編集する', edit_admin_genre_path(genre), class: "btn btn-sm btn-success" %></td>
              <td><%= link_to "削除する",  admin_genre_path(genre), method: :delete %></td>
            </tr>
          <% end %>
        </table>
    </div>
  </div>
</div>