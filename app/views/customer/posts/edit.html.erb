<div class="container">
  <div class= "row">
    <div class= "col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h1>投稿編集</h1>
        <%= form_with model:@post, url: customer_post_path(@post), local: true do |f| %>
      <h4>投稿画像</h4>
        <%= f.attachment_field :post_image %>
      <h4>題名</h4>
        <%= f.text_field :name %>
      <h4>投稿内容</h4>
        <%= f.text_area :introduction %>
      <h4>ジャンル</h4>
        <%= f.collection_select :genre_id, Genre.all, :id, :name, include_blank: "選択して下さい" %>
        <%= f.submit '保存を保存' %>
        <% end %>
    </div>
  </div>
</div>