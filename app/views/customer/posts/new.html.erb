<div class="container">
  <div class= "row">
    <div class= "col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <div class= "font">新規投稿</div>
      <% if @post.errors.any? %>
        <%= @post.errors.count %>件のエラーが発生しました
        <% @post.errors.full_messages.each do |message| %>
        <%= message %>
        <% end %>
      <% end %>
      <div class="post_new">
        <div class="form-register">
          <%= form_with model: @post, url:customer_posts_path, local:true do |f| %>
            <h6>投稿画像</h6>
            <div class="new_post"><%= f.attachment_field :post_image %></div><br>
            <h6>ジャンル</h6>
            <div class="new_genre"><%= f.collection_select :genre_id, Genre.all, :id, :name, include_blank: "選択して下さい" %></div><br>
            <div class="new_title"><%= f.text_field :name, placeholder: '題名' %></div><br>
            <div class=new_contents""><%= f.text_area :introduction, size: "2x5", class: "form-control", placeholder: '投稿内容' %></div><br>
            <div><%= f.submit '投稿', class: "button" %></div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>