<h1>新規投稿</h1>
<% if @post.errors.any? %>
  <%= @post.errors.count %>件のエラーが発生しました
  <% @post.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>
<%= form_with model: @post, url:customer_posts_path, local:true do |f| %>
  <h4>投稿画像</h4>
  <%= f.attachment_field :post_image %>
  <h4>題名</h4>
  <%= f.text_field :name %>
  <h4>投稿内容</h4>
  <%= f.text_area :introduction %>
  <h4>ジャンル</h4>
  <%= f.collection_select :genre_id, Genre.all, :id, :name, include_blank: "選択して下さい" %>
  <%= f.submit '投稿' %>
<% end %>