<h1>検索結果</h1>
<table>
  <thead>
    <tr>
      <th>題</th>
      <th>投稿内容</th>
      <th>ジャンル</th>
    </tr>
  </thead>

  <tbody>
    <% @results.each do |post| %>
      <tr>
        <td><%= post.name %></td>
        <td><%= post.introduction %></td>
        <td><%= post.genre_id %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to "投稿一覧", customer_posts_path %>