<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <table class="table">
        <thead>
          <tr>
            <th>プロフィール画像</th>
            <th>お題</th>
            <th>ジャンル名</th>
          </tr>
        </thead>
        <% @results.each do |post| %>
        <tbody>
          <tr>
            <td><%#= attachment_image_tag follower.customer, :profile_image, format: 'jpeg', size: "100x100" , fallback: "no_image.jpg" %></td>
            <td><%= post.name %></td>
            <td><%= post.genre_id %></td>
          </tr>
        </tbody>
        <% end %>
        <%= link_to "投稿一覧", customer_posts_path %>
      </table>
    </div>
  </div>
</div>