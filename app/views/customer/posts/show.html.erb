<div class= "products_item_body">
  <div class= "container px-5 px-sm-0">
    <div class= "row">
      <div class= "col-md-3">
        <h3>投稿詳細</h3>
        <image class= "image">
          <%= attachment_image_tag @post, :post_image, format: 'jpeg', size: "100x100" , fallback: "no_image.jpg" %>
        </image>
          <p>
              <th>題:</th>
              <%= @post.name %>
          </p>

          <P>
              <th>投稿内容</th>
              <%= @post.introduction %>
          </P>

          <th>ジャンル</th>
          <%= @post.genre.name %>

          <br>

          <% if @post.customer_id == current_customer.id %>
              <%= link_to '編集', edit_customer_post_path(@post) %>
              <%= link_to "削除", customer_post_path(@post), method: :delete, data: {confirm: '本当に削除しますか？'} %>
          <% end %>

          <!--フォロー機能-->
          <div class="follow_<%= @post.id %>">
            <%= render 'customer/posts/follow', post: @post %>
          </div>

      </div>

      <div class= "col-md-8 offset-md-1">
        <!--コメント機能-->
        <div class="comments_<%= @post.id %>">
          <%= render 'customer/posts/comment', post: @post %>
        </div>

          <!--いいね機能-->
          <div class="post_<%= @post.id %>">
            <%= render 'customer/posts/like', post: @post %>
          </div>
      </div>
    </div>
  </div>
</div>