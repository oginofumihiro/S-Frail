<div class="container">
  <div class="row">
    <div class= "col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <div class="font_sign_up">さあ始めましょう</div>
        <div class="sign_up">
          <%= form_with model: @customer, url: customer_registration_path, method: :post, id: 'new_user', class: 'new_user', local: true do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>
          <div>
            <%= f.label :profile_image, "プロフィール画像" %><span class="text-danger">（必須）</span><br />
            <%= f.attachment_field :profile_image, autofocus: true %>
          </div>
          <div class="field">
            <%= f.label :last_name, "(性)" %><span class="text-danger">（必須）</span><br />
            <%= f.text_field :last_name, autofocus: true %>
          </div>
          <div class="field">
            <%= f.label :first_name, "(名)" %><span class="text-danger">（必須）</span><br />
            <%= f.text_field :first_name, autofocus: true %>
          </div>
          <div class="field">
            <%= f.label :last_name_kana, "(セイ)" %><span class="text-danger">（必須）</span><br />
            <%= f.text_field :last_name_kana, autofocus: true %>
          </div>
          <div class="field">
            <%= f.label :first_name_kana, "(メイ)" %><span class="text-danger">（必須）</span><br />
            <%= f.text_field :first_name_kana, autofocus: true %>
          </div>
          <div class="field">
            <%= f.label :email, "メールアドレス" %><span class="text-danger">（必須）</span><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
          </div>
          <div class="field">
            <%= f.label :postal_code, "郵便番号" %><span class="text-danger">（必須）</span><br />
            <%= f.text_field :postal_code, autofocus: true %>
          </div>
          <div class="field">
            <%= f.label :address, "住所" %><span class="text-danger">（必須）</span><br />
            <%= f.text_field :address, autofocus: true %>
          </div>
          <div class="field">
            <%= f.label :telephone_number, "電話番号" %><span class="text-danger">（必須）</span><br />
            <%= f.text_field :telephone_number, autofocus: true %>
          </div>
          <div class="field">
            <%= f.label :password, "パスワード(６文字以上)" %><span class="text-danger">（必須）</span>
            <% if @minimum_password_length %>
            <em><%#= @minimum_password_length %></em>
            <% end %><br />
            <%= f.password_field :password, autocomplete: "new-password" %>
          </div>
          <div class="field">
            <%= f.label :password_confirmation, "パスワード(確認用)" %><span class="text-danger">（必須）</span><br />
            <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
          </div>
          <div class="sign_up_button">
            <%= f.submit "新規会員登録" %>
          </div>
        <% end %>
        <div class="font_sign_up">既にご登録済みの方</div>
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>