<section class="top_blog">
<div class="container">
  <div class="row">
    <% @posts.each do |post| %>
      <div class="col-3">
        <div class="img"><%= attachment_image_tag post, :post_image, format: 'jpeg', size: "200x200" , fallback: "no_image.jpg" %></div></br>
        [<%= post.genre.name %>]<br>
        <%= link_to post.name, customer_post_path(post) %><br>
      </div>
    <% end %>
  </div>
</div>
</section>