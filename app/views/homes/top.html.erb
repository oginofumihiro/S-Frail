<!--topページ-->
<div class="box">
  <div class="bgImg src1"></div>
  <div class="bgImg src2"></div>
    <div class="inner_bg_caption">
      <h1 class="top">ようこそS.Frailへ！</h1>
        <p class="top-text">
          皆さんにワクワクを！</br>
          皆さんの力になれたら幸いです。</br>
          テスト中です！
        </p>
    </div>
</div>
<!--新着一覧-->
<section class="top_blog">
  <h2 class="top_common_hd">
    <span class="font_en">新着投稿</span>
  </h2>
  <div class="common_blog_list">
    <div class="container">
      <div class="row">
        <% @posts.each do |post| %>
          <div class="col-3">
            <div class="top_text">
              <div class="top_text_list">
                <div><%= attachment_image_tag post, :post_image, format: 'jpeg', size: "250x200" , fallback: "no_image.jpg", class: "common_blog_item" %></div></br>
                [<%= post.genre.name %>]<br>
                <%= link_to post.name, customer_post_path(post) %><br>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</section>