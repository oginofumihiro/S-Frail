<!DOCTYPE html>
<html>
  <head>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <!--会員側のheader-->
  <header>
    <div class= "header-top-content">
      <%= link_to top_path, class:"header-title" do %>
        <i class="fas fa-heartbeat">S.Frail</i>
      <% end %>

      <nav class="navbar navbar-expand-lg navbar-light">
        <div>ようこそ<%= current_customer.last_name %><%= current_customer.first_name %>さん</div>
          <div class="dropdown">
            <button class="dropdown-toggle" data-toggle="dropdown" id="dropdownMenuLink" aria-haspopup="true" aria-expanded="false" type="button">
              メニュー <b class="caret"></b>
            </button>
            <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                  <% if customer_signed_in? %>
                      <%= link_to 'ログアウト', customer_out_path, class: "logout dropdown-item" %>
                      <%= link_to 'マイページ', customer_user_path(current_customer), class: "myapge dropdown-item" %>
                      <%= link_to '新規投稿', new_customer_post_path, class: "newpost dropdown-item" %>
                      <%= link_to '投稿一覧', customer_posts_path, class: "post dropdown-item" %>
                      <%= link_to 'サイト概要', homes_about_path, class: "about dropdown-item" %>
                  <% elsif admin_signed_in? %>
                    <li>
                      <%= link_to "ジャンル", admin_genres_path, class: "genre" %>
                    </li>
                    <li>
                      <%= link_to "退会する", admin_out_path, class: "logout" %>
                    </li>
                    <li>
                      <%= link_to "会員一覧", admin_customers_path, class: "customer" %>
                    </li>
                  <% else %>
                    <li>
                      <%= link_to "新規登録", new_customer_registration_path, class: "signup" %>
                    </li>
                    <li>
                      <%= link_to "ログイン", new_customer_session_path, class: "login" %>
                    </li>
                    <li>
                      <%= link_to "topページ", top_path, class: "top" %>
                    </li>
                    <li>
                      <%= link_to "管理者", admin_session_path, class: "admin" %>
                    </li>
                  <% end %>
              </div>
            </div>
      </nav>
    </div>
    <p class="header-center">〜健康寿命に革命を〜</p>
  </header>
  <body>
    <%= yield %>
  </body>
</html>
